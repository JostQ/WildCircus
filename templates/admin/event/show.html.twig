{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }} - Admin Event{% endblock %}

{% block body %}
    <h2  class="title">Event</h2>
    <hr>

    <table class="table is-narrow is-fullwidth shows">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ event.price }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ event.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ event.city }}</td>
            </tr>
            <tr>
                <th>Postal</th>
                <td>{{ event.postal }}</td>
            </tr>
        </tbody>
    </table>

    <div class="columns list-button-event">
        <a href="{{ path('admin_event_index') }}" class="button is-dark">Back to list</a>

        <a href="{{ path('admin_event_edit', {'id': event.id}) }}" class="button is-dark"><i class="fas fa-pen"></i></a>

        {{ include('admin/event/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello BookingController!{% endblock %}

{% block body %}

    <h2 class="title">My Bookings</h2>
    <table class="table is-narrow is-fullwidth">
        <tr>
            <th>Order</th>
            <th>Booking</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.event.name }}</td>
                <td>{{ booking.quantity }}</td>
                <td>{{ booking.event.price * booking.quantity }}â‚¬</td>
            </tr>
        {% else %}
            <tr>
                <td>No Booking</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Wild Circus - Contact{% endblock %}

{% block body %}
    <h2 class="title">Contact us</h2>
    <hr>
    <div class="column is-12 is-8-desktop contact">
        <div class="box form-box">
            {{ form_start(form) }}
            <div class="field">
                {{ form_label(form.email, "Email", {'attr' : {'class' : 'label'}}) }}
                <div class="control">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="field">
                {{ form_label(form.subject, "Subject", {'attr' : {'class' : 'label'}}) }}
                <div class="control">
                    {{ form_errors(form.subject) }}
                    {{ form_widget(form.subject) }}
                </div>
            </div>
            <div class="field">
                {{ form_label(form.message, "Message", {'attr' : {'class' : 'label', 'row' : '4'}}) }}
                <div class="control">
                    {{ form_errors(form.message) }}
                    {{ form_widget(form.message) }}
                </div>
            </div>
            <div class="field">
                <div class="control buttonSubmit">
                    {{ form_row(form.submit, {'label' : 'Send Message', 'attr' : {'class': 'button is-primary'}}) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

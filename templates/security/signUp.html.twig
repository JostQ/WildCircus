{% extends 'base.html.twig' %}

{% block title %}Wild Circus - Sign Up{% endblock %}

{% block body %}
    <h2 class="title">Sign Up</h2>
    <hr>
    <div class="column is-12 is-8-desktop forms">
        <div class="box form-box">
            {{ form_start(form) }}
            <div class="field">
                {{ form_label(form.firstname, "Firstname", {'attr' : {'class' : 'label'}}) }}
                <div class="control">
                    {{ form_errors(form.firstname) }}
                    {{ form_widget(form.firstname) }}
                </div>
            </div>
            <div class="field">
                {{ form_label(form.lastname, "Lastname", {'attr' : {'class' : 'label'}}) }}
                <div class="control">
                    {{ form_errors(form.lastname) }}
                    {{ form_widget(form.lastname) }}
                </div>
            </div>
            <div class="field">
                {{ form_label(form.email, "Email", {'attr' : {'class' : 'label'}}) }}
                <div class="control">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="field">
                {{ form_label(form.password, "Password", {'attr' : {'class' : 'label'}}) }}
                <div class="control">
                    {{ form_errors(form.password) }}
                    {{ form_widget(form.password) }}
                </div>
            </div>
            <div class="field">
                <label for="confirmPassword">Confirm your password</label>
                <div class="control">
                    <input type="password" name="confirmPassword" class="input" id="confirmPassword">
                </div>
            </div>
            <div class="field">
                <div class="control">
                    {{ form_errors(form.isSubscribe) }}
                    {{ form_widget(form.isSubscribe) }}
                    {{ form_label(form.isSubscribe, "Do you want to be subscribe to newsletters ?", {'attr' : {'class' : 'label'}}) }}
                </div>
            </div>
            <div class="field">
                <div class="control buttonSubmit">
                    {{ form_row(form.submit, {'label' : 'Sign Up', 'attr' : {'class': 'button is-primary'}}) }}
                </div>
            </div>
            {{ form_end(form) }}
            <div class="link-auth">
                <a href="{{ path('app_login') }}">Already registered ?</a>
            </div>
        </div>
    </div>

{% endblock %}
